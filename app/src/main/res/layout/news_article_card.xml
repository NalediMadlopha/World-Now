<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:elevation="@dimen/card_view_elevation"
    app:pressedTranslationZ="@dimen/card_view_pressed_translation_z">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/articleCardImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/article_card_image_height"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            tools:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/articleCardTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_8dp"
                android:maxLines="2"
                android:textStyle="bold"
                android:textSize="@dimen/article_card_title_text_size"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/articleCardDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_8dp"
                android:textSize="@dimen/article_card_date_text_size"
                tools:text="@tools:sample/date/ddmmyy" />

        </LinearLayout>

    </LinearLayout>

</android.support.design.card.MaterialCardView>